<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:CustomFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dip">

            <com.smartfarming.screenrender.view.CustomFontTextView
                    android:id="@+id/tv_pheromone_question_title"
                    style="@style/HTMLTitleTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    CustomFont:fontName="mangal.ttf"/>

            <ImageView
                    android:id="@+id/iv_pheromonetrap_trap"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_size"
                    android:src="@drawable/ic_default"/>

            <com.smartfarming.screenrender.view.CustomFontTextView
                    android:id="@+id/tvImageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center|top"
                    android:padding="3dp"
                    android:textColor="@color/colorLightGreyText"
                    android:text=""
                    android:layout_below="@+id/ivImage"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp">

                <RelativeLayout
                        android:id="@+id/rl_question_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                    <View
                            android:id="@+id/seperator_1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="4dip"
                            android:layout_marginTop="2dip"
                            android:background="@android:color/darker_gray"/>

                    <com.smartfarming.screenrender.view.CustomFontTextView
                            android:id="@+id/tv_pheromone_quetion_1"
                            style="@style/HTMLDescriptionTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/seperator_1"
                            android:layout_marginTop="8dip"
                            android:gravity="center"
                            CustomFont:fontName="mangal.ttf"/>

                    <android.support.v7.widget.ButtonBarLayout
                            android:id="@+id/selector_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_pheromone_quetion_1"
                            android:gravity="center">

                        <Button
                                android:id="@+id/btn_pheromone_quetion_no_1"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dip"
                                android:background="@color/colorRed"
                                android:text="@string/no"/>

                        <Button
                                android:id="@+id/btn_pheromone_quetion_yes_1"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:background="@color/colorGreen"
                                android:text="@string/yes"/>

                    </android.support.v7.widget.ButtonBarLayout>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/selector_1"
                            android:layout_marginBottom="2dip"
                            android:layout_marginTop="4dip"
                            android:background="@android:color/darker_gray"/>
                </RelativeLayout>

                <FrameLayout
                        android:id="@+id/fl_question_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_question_1">


                    <RelativeLayout
                            android:id="@+id/rl_question_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                        <View
                                android:id="@+id/seperator_2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="4dip"
                                android:layout_marginTop="2dip"
                                android:background="@android:color/darker_gray"/>

                        <com.smartfarming.screenrender.view.CustomFontTextView
                                android:id="@+id/tv_pheromone_quetion_2"
                                style="@style/HTMLDescriptionTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/seperator_2"
                                android:layout_marginTop="8dip"
                                android:gravity="center"
                                CustomFont:fontName="mangal.ttf"/>

                        <android.support.v7.widget.ButtonBarLayout
                                android:id="@+id/selector_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_pheromone_quetion_2"
                                android:gravity="center">

                            <Button
                                    android:id="@+id/btn_pheromone_quetion_no_2"
                                    style="@style/Widget.AppCompat.Button.Colored"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dip"
                                    android:background="@color/colorRed"
                                    android:text="@string/no"/>

                            <Button
                                    android:id="@+id/btn_pheromone_quetion_yes_2"
                                    style="@style/Widget.AppCompat.Button.Colored"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dip"
                                    android:background="@color/colorGreen"
                                    android:text="@string/yes"/>

                        </android.support.v7.widget.ButtonBarLayout>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/selector_2"
                                android:layout_marginBottom="2dip"
                                android:layout_marginTop="4dip"
                                android:background="@android:color/darker_gray"/>
                    </RelativeLayout>

                    <View
                            android:id="@+id/unselector_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#66000000"/>

                </FrameLayout>

                <FrameLayout
                        android:id="@+id/fl_question_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fl_question_2">

                    <RelativeLayout
                            android:id="@+id/rl_question_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                        <View
                                android:id="@+id/seperator_3"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="4dip"
                                android:layout_marginTop="2dip"
                                android:background="@android:color/darker_gray"/>

                        <com.smartfarming.screenrender.view.CustomFontTextView
                                android:id="@+id/tv_pheromone_quetion_3"
                                style="@style/HTMLDescriptionTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/seperator_3"
                                android:layout_marginTop="8dip"
                                android:gravity="center"
                                CustomFont:fontName="mangal.ttf"/>

                        <android.support.v7.widget.ButtonBarLayout
                                android:id="@+id/selector_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_pheromone_quetion_3"
                                android:gravity="center"
                                android:weightSum="0.5">

                            <Button
                                    android:id="@+id/btn_pheromone_quetion_no_3"
                                    style="@style/Widget.AppCompat.Button.Colored"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dip"
                                    android:background="@color/colorRed"
                                    android:text="@string/no"/>

                            <Button
                                    android:id="@+id/btn_pheromone_quetion_yes_3"
                                    style="@style/Widget.AppCompat.Button.Colored"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dip"
                                    android:background="@color/colorGreen"
                                    android:text="@string/yes"/>

                        </android.support.v7.widget.ButtonBarLayout>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/selector_3"
                                android:layout_marginBottom="2dip"
                                android:layout_marginTop="4dip"
                                android:background="@android:color/darker_gray"/>
                    </RelativeLayout>

                    <View
                            android:id="@+id/unselector_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#66000000"/>
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>
