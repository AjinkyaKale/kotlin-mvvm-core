<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1" android:layout_margin="@dimen/activity_horizontal_margin">

            <include
                    android:id="@+id/include"
                    layout="@layout/layout_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <com.smartfarming.screenrender.view.CustomFontTextView
                    android:id="@+id/tvDescription"
                    style="@style/HTMLDescriptionTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/include"
                    android:gravity="center_vertical"
                    android:text=""/>

            <LinearLayout
                    android:id="@+id/llTrapNames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_margin="20dp"
                    android:orientation="vertical"></LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
