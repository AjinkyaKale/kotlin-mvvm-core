<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
                android:id="@+id/txt_variety_selection_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="mangal.ttf"
                android:gravity="center"
                android:text="Selection Title"
                android:textSize="22sp"/>

        <LinearLayout
                android:id="@+id/ll_region_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/txt_label_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="mangal.ttf"
                    android:gravity="start|center_vertical"
                    android:padding="4dp"
                    android:text="Region"
                    android:textColor="@color/colorDarkGreyText"
                    android:textColorHint="@color/colorDarkGreyText"
                    android:textSize="@dimen/hint_size"/>

            <Spinner
                    android:id="@+id/spinner_region"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:paddingTop="2dp"
                    android:saveEnabled="false"/>

        </LinearLayout>

