        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!--<TextView
                android:id="@+id/txt_title_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Season"
                android:textSize="18sp"
                android:textStyle="bold" />-->
            <TextView
                    android:id="@+id/txt_title_season"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="mangal.ttf"
                    android:gravity="start|center_vertical"
                    android:padding="4dp"
                    android:text="Season"
                    android:textColor="@color/colorDarkGreyText"
                    android:textColorHint="@color/colorDarkGreyText"
                    android:textSize="@dimen/hint_size"/>

            <RadioGroup
                    android:id="@+id/radio_group_crop_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/textview_label_genders"
                    android:orientation="horizontal"
                    android:padding="4dp">

                <RadioButton
                        android:id="@+id/radio_btn_kharif"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kharif"
                        android:textColor="@color/colorDarkGreyText"/>

                <RadioButton
                        android:id="@+id/radio_btn_rabi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rabi"
                        android:textColor="@color/colorDarkGreyText"/>

            </RadioGroup>

        </LinearLayout>


        <LinearLayout
                android:id="@+id/ll_purpose_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

            <TextView
                    android:id="@+id/txt_label_purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="mangal.ttf"
                    android:gravity="start|center_vertical"
                    android:padding="4dp"
                    android:text="Purpose"
                    android:textColor="@color/colorDarkGreyText"
                    android:textColorHint="@color/colorDarkGreyText"
                    android:textSize="@dimen/hint_size"/>

            <Spinner
                    android:id="@+id/spinner_purpose"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:paddingTop="2dp"
                    android:saveEnabled="false"/>

        </LinearLayout>


        <LinearLayout
                android:id="@+id/ll_water_availability_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

            <TextView
                    android:id="@+id/txt_label_water_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="mangal.ttf"
                    android:gravity="start|center_vertical"
                    android:padding="4dp"
                    android:text="Water Availability"
                    android:textColor="@color/colorDarkGreyText"
                    android:textColorHint="@color/colorDarkGreyText"
                    android:textSize="@dimen/hint_size"/>

            <Spinner
                    android:id="@+id/spinner_water_availability"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:paddingTop="2dp"
                    android:saveEnabled="false"/>

        </LinearLayout>


