<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:CustomFont="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <com.smartfarming.screenrender.view.CustomFontTextView
            android:id="@+id/tv_dialog_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dip"
            android:text="Leave Comment or Suggestion"
            android:textColor="@color/colorDarkGrey"
            android:textSize="16sp"
            CustomFont:fontName="mangal.ttf"/>


    <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="4"
            android:padding="20dp"
            android:text=""/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

        <Button
                android:id="@+id/btnCancel"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Cancel"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

        <Button
                android:id="@+id/btnOk"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Ok"/>

    </LinearLayout>


    <!-- <Button
         android:id="@+id/btnSubmit"
         style="@style/ButtonStyle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/rounded_rect_btn"
         android:padding="10dp"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:text="Submit" />
-->


</LinearLayout>
